@model ProdCat.Models.Producto
@{
    ViewBag.Title = "MostrarModificar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<ProdCat.Models.CategoriaProducto> categorias;



    categorias = ViewBag.Categorias;
}

<h2>MostrarModificar</h2>

<div class="row">
    <div class="col-lg-6">
        <form method="post" action="@Url.Action("GuardarModificar", "Productos")">


            <div class="form-group">
                <label for="idProducto">ID Producto</label>
                <input type="number" name="Id"class="form-control" value="@Model.Id" readonly/>
            </div>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" class="form-control" value="@Model.Nombre"/>
            </div>
            <div class="form-group">
                <label for="descripcion">Descripción</label>
                <textarea name="descripcion" class="form-control">@Model.Descripcion</textarea>

            </div>
            <div class="form-group">
                <label for="precio">Precio</label>
                <input type="number" name="precio" class="form-control" value="@Model.Precio" />
            </div>
            <div class="form-group">
                <label for="stock">Stock</label>
                <input type="number" name="stock" class="form-control" value="@Model.Stock" />
            </div>

            <div class="form-group">
                <label for="idCategoria">Categoría</label>
                <select class="form-control" name="idCategoria">
                    @foreach (ProdCat.Models.CategoriaProducto cat in categorias)
                    {
                        if (Model.idCategoria == cat.Id)
                        {
                            <option value="@cat.Id" selected>@cat.Nombre</option>
                        }
                        else
                        {
                            <option value="@cat.Id">@cat.Nombre</option>
                        }
                    }
                </select>

            </div>

            <input type="submit" value="Guardar" class="btn btn-primary" />
        </form>

    </div>
</div>